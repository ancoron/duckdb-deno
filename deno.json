{
  "name": "@divy/duckdb",
  "version": "0.2.1",
  "exports": "./mod.ts",
  "imports": {
    "@std/assert": "jsr:@std/assert@1"
  },
  "tasks": {
    "lib-mac": "./build.sh",
    "lib-linux": "./build-linux.sh",
    "check": "deno fmt --check && deno lint && deno check *.ts *.js",
    "format": "deno fmt",
    "test": "deno test --allow-ffi --allow-env --coverage=.local/cov_profile",
    "coverage": "deno coverage .local/cov_profile",
    "bench": "deno run --allow-ffi --allow-env --allow-sys benches/deno.mjs",
    "bench-jit": "deno run --allow-ffi --allow-env --allow-sys benches/jit-deno.mjs",
    "bench-bun": "bun run benches/bun.mjs",
    "bench-bun-jit": "bun run benches/jit-bun.mjs"
  },
  "lint": {
    "rules": {
      "tags": [
        "recommended"
      ],
      "exclude": [
        "no-explicit-any"
      ]
    }
  },
  "unstable": [
    "ffi"
  ],
  "test": {
    "include": [
      "*_test.js",
      "*_test.ts"
    ]
  },
  "exclude": [
    ".github/",
    "bin/",
    ".local/",
    "src/"
  ]
}
